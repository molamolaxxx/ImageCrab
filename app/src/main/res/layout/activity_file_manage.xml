<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_file_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mola.imagecrab.FileManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_goleft"
            android:id="@+id/close_manager" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ImageManager"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_weight="6"
            android:gravity="center"
             />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/setting3"
            android:src="@drawable/ic_action_overflow"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#28131331"
            >
            <com.mola.swipemenulistview.SwipeMenuListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white"
                android:id="@+id/folder_lv"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/manager_empty_hint"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="120dp"
                    android:src="@drawable/label"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="图库里什么也没有哦ovo.."
                    android:textSize="20dp"
                    android:id="@+id/textView2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:id="@+id/add"
                        android:src="@drawable/ic_action_add_b"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
